<!doctype html>
<html>
	<h1>New Device</h1>
	<%= form_for :device, url: devices_path do |f| %>
		<p>
			<%= f.label :lat %> <br>
			<%= f.text_field :lat %> <br>
		</p>
		<p>
			<%= f.label :long %> <br>
			<%= f.text_field :long %> <br>
		</p>
		<p>
			<%= f.label :name %> <br>
			<%= f.text_field :name %> <br>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>
</html>